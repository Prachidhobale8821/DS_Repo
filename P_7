#include <stdio.h>
#include <string.h>
#include <ctype.h>

#define MAX 200

int isOperator(char c) {
    return c=='+'||c=='-'||c=='*'||c=='/'||c=='^';
}

int precedence(char c) {
    if (c == '^') return 3;
    if (c == '*' || c == '/') return 2;
    if (c == '+' || c == '-') return 1;
    return 0;
}

void infixToPostfix(const char *infix, char *postfix) {
    char stack[MAX];
    int top = -1;
    int k = 0;
    for (int i = 0; infix[i] != '\0'; i++) {
        char c = infix[i];
        if (isalnum((unsigned char)c)) {
            postfix[k++] = c;
        } else if (c == '(') {
            stack[++top] = c;
        } else if (c == ')') {
            while (top != -1 && stack[top] != '(')
                postfix[k++] = stack[top--];
            if (top != -1) top--; // pop '('
        } else if (isOperator(c)) {
            while (top != -1 && isOperator(stack[top]) &&
                  ((precedence(c) < precedence(stack[top])) ||
                   (precedence(c) == precedence(stack[top]) && c != '^')))
            {
                postfix[k++] = stack[top--];
            }
            stack[++top] = c;
        }
    }
    while (top != -1) postfix[k++] = stack[top--];
    postfix[k] = '\0';
}

int main() {
    char infix[MAX], postfix[MAX];
    printf("Enter infix expression (no spaces, operands single-char): ");
    if (scanf("%s", infix) != 1) return 0;
    infixToPostfix(infix, postfix);
    printf("Postfix: %s\n", postfix);
    return 0;
}
