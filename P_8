#include <stdio.h>
#include <string.h>
#include <ctype.h>

#define MAX 200

int isOperator(char c) {
    return c=='+'||c=='-'||c=='*'||c=='/'||c=='^';
}

int precedence(char c) {
    if (c == '^') return 3;
    if (c == '*' || c == '/') return 2;
    if (c == '+' || c == '-') return 1;
    return 0;
}

void reverseStr(char *s) {
    int i=0, j=strlen(s)-1;
    while(i<j) {
        char t=s[i]; s[i]=s[j]; s[j]=t;
        i++; j--;
    }
}

void swapParentheses(char *s) {
    for (int i=0; s[i]; i++) {
        if (s[i]=='(') s[i]=')';
        else if (s[i]==')') s[i]='(';
    }
}

void infixToPostfix(const char *infix, char *postfix) {
    char stack[MAX];
    int top = -1, k = 0;
    for (int i = 0; infix[i] != '\0'; i++) {
        char c = infix[i];
        if (isalnum((unsigned char)c)) {
            postfix[k++] = c;
        } else if (c == '(') {
            stack[++top] = c;
        } else if (c == ')') {
            while (top != -1 && stack[top] != '(')
                postfix[k++] = stack[top--];
            if (top != -1) top--; // pop '('
        } else if (isOperator(c)) {
            while (top != -1 && isOperator(stack[top]) &&
                  ((precedence(c) < precedence(stack[top])) ||
                   (precedence(c) == precedence(stack[top]) && c != '^')))
            {
                postfix[k++] = stack[top--];
            }
            stack[++top] = c;
        }
    }
    while (top != -1) postfix[k++] = stack[top--];
    postfix[k] = '\0';
}

void infixToPrefix(const char *infix, char *prefix) {
    char tmp[MAX], post[MAX];
    strcpy(tmp, infix);
    reverseStr(tmp);
    swapParentheses(tmp);
    infixToPostfix(tmp, post);
    reverseStr(post);
    strcpy(prefix, post);
}

int main() {
    char infix[MAX], prefix[MAX];
    printf("Enter infix expression (no spaces, operands single-char): ");
    if (scanf("%s", infix) != 1) return 0;
    infixToPrefix(infix, prefix);
    printf("Prefix: %s\n", prefix);
    return 0;
}
