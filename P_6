#include <stdio.h>

#define MAX 32

int stack[MAX];
int top = -1;

void push(int x) {
    if (top < MAX - 1) stack[++top] = x;
}

int pop() {
    if (top == -1) return -1;
    return stack[top--];
}

void decimalToBinary(unsigned int n) {
    if (n == 0) {
        printf("0\n");
        return;
    }
    while (n > 0) {
        push(n % 2);
        n /= 2;
    }
    while (top != -1) {
        printf("%d", pop());
    }
    printf("\n");
}

int main() {
    unsigned int num;
    printf("Enter a non-negative integer: ");
    if (scanf("%u", &num) != 1) return 0;
    printf("Binary: ");
    decimalToBinary(num);
    return 0;
}
